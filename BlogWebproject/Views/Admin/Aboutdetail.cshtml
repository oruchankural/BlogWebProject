@using BlogWebproject.Models
@model List<About>
@{
    ViewBag.Title = "Aboutdetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    @foreach (var x in Model)
    {


        <div class="container-fluid">
            <h1 class="mt-4"></h1>
            <div class="container-md">
                <h4>About us Detail</h4>

                <div class="row align-items-md-stretch">
                    <div class="col-md">
                        <hr />
                        <div class=" p-3 text-white bg-dark rounded-3">
                            <h3 class="text-warning">Year </h3>
                            <p>@x.Year</p>
                        </div>
                        <hr />
                        <div class=" p-3 text-white bg-dark rounded-3">
                            <h3 class="text-warning">Title</h3>
                            <p>@x.Title</p>
                        </div>
                        <hr />
                        <div class=" p-3 text-white bg-dark rounded-3">
                            <h3 class="text-warning">Detail</h3>
                            <p>@x.Detail</p>
                        </div>
                    </div>


                </div>
                <br />

            </div>


        </div>


    }

</div>

