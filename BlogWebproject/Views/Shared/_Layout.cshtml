
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Mehmet Girgin's Personal Blog</title>

    <!-- bootstrap css -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">

    <!-- google web fonts -->
    <link href="https://fonts.googleapis.com/css?family=Playfair+Display:700,900" rel="stylesheet">

    <!-- icofont -->
    <link rel="stylesheet" href="~/Content/Site/blog/icons/icofont.min.css">

    <!-- blog stil dosyası -->
    <link rel="stylesheet" href="~/Content/Site/blog/style.css">
    <link rel="stylesheet" href="~/Content/Site/blog/styles.css">

    <!-- bootstrap için jquery gerekli -->
    <!-- <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script> -->
    <!-- bootstrap scriptleri -->
    <!-- <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script> -->
    <!-- blog scripti -->
    <script src="~/Content/Site/blog/app.js"></script>
</head>
<body>
    <div class="container">
        <header class="blog-header py-4">
            <div class="row">
                <div class="col-12 col-md-6 text-center text-md-left">
                    <div class="blog-header-text">
                        <a class="blog-header-logo text-dark" href="index.html">Doğanay Üzüm's Blog</a>
                    </div>
                </div>
                <div class="col-12 col-md-6 d-flex justify-content-center justify-content-md-end align-items-center">
                    <nav class="nav">
                        <a class="p-2 px-3 text-right active text-dark border-bottom border-dark" href="/Home/Index">
                            <i class="icofont-home mr-1"></i>Home
                        </a>
                        <a class="p-2 px-3 text-right text-muted" data-fetcher href="/Skill/Index">
                            <i class="icofont-chart-bar-graph mr-1"></i>Skills
                        </a>
                        <a class="p-2 px-3 text-right text-muted" href="/About/Index">
                            <i class="icofont-user-alt-3 mr-2"></i>About me
                        </a>
                        <a class="p-2 px-3 text-right text-muted" href="/Contact/Index">
                            <i class="icofont-ui-contact-list mr-2"></i>Contact
                        </a>
                    </nav>
                </div>
            </div>
        </header>

        @RenderBody()
    </div>
    <footer class="pt-5 pb-3 mt-3">
        <div class="container">
            <div class="linksbar row">
                <div class="col-md-8">
                    <ul class="d-flex justify-content-between justify-content-md-start list-unstyled">
                        <li class="pr-md-4">
                            <a href="/Home/Index">Home page</a>
                        </li>
                        <li class="pr-md-4">
                            <a href="/Skill/Index">My skills</a>
                        </li>
                        <li class="pr-md-4">
                            <a href="/About/Index">Who am I?</a>
                        </li>
                        <li class="pr-md-4">
                            <a href="/Contact/Index">Contact me</a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <ul class="d-flex justify-content-around justify-content-md-end list-unstyled">
                        <li class="pr-md-4">
                            <a href="http://instagram.com/username"
                               class="iconic-social d-flex align-items-center"
                               target="_blank">
                                <i class="icofont-instagram"></i>
                                <span class="d-inline-block d-md-none ml-2">

                                </span>
                            </a>
                        </li>
                        <li class="pr-md-4">
                            <a href="http://facebook.com/username"
                               class="iconic-social d-flex align-items-center"
                               target="_blank">
                                <i class="icofont-facebook"></i>
                                <span class="d-inline-block d-md-none ml-2">

                                </span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="bloginfo-bar pt-4 mt-0 row">
                <div class="col-md-6 text-center text-md-left">
                    <h4 class="font-weight-normal font-italic">
                        Doğanay Üzüm's Blog
                    </h4>
                </div>
                <div class="col-md-6 text-center text-md-right">
                    All rights reserved. Doğanay Üzüm &mdash; 2021&copy;
                </div>
            </div>
        </div>
    </footer>
</body>
</html>